<div class="btn-group btn-large">
    <button class="btn dropdown-toggle btn-large" data-toggle="dropdown">Phases <span class="caret"></span></button>
    <ul class="dropdown-menu">
        <li>
            <a href="{{ path('mgateSuivi_phases_modifier', {'id': etude.id}) }}">Modifier les Phases</a>
        </li>
    </ul>
</div>
<div class="row">
                    {% for phase in etude.phases %}
        <div class="span4">
            <table id="phase" class="table table-striped table-bordered" >
                <tr id="phaseRow1">
                    <th colspan="2">Phase n°{{phase.position+1}}</th>
                </tr>
                <tr id="phaseRow2">
                    <th>Titre</th>
                    <td>{{phase.titre}}</td>
                </tr>
                <tr id="phaseRow3">
                    <th>Objectifs</th>
                    <td>{{phase.objectif}}</td>
                </tr>
                <tr>
                    <th>Méthodologie</th>
                    <td><div class="ligne4">{{phase.methodo}}</div></td>
                </tr>
                <tr>
                    <th>Validation</th>
                    <td>
                                    {% if phase.validation == 1 %}
                            Validation orale lors d’un entretien avec le client.
                                    {% elseif phase.validation == 2 %}
                            Validation écrite qui prend la forme d’un PVI.
                                    {% endif %}   
                        </td>
                    </tr>
                    <tr>
                        <th>Nombre JEH</th>
                        <td>{{phase.nbrJEH}} JEH</td>
                    </tr>
                    <tr>
                        <th>Prix JEH</th>
                        <td>{{phase.prixJEH}} €</td>
                    </tr>
                    <tr>
                        <th>Date de Debut</th>
                        <td>{{phase.dateDebut|date("d/m/Y")}}</td>
                    </tr>
                    <tr>
                        <th>Delai</th>
                        <td>{{phase.delai}} jours</td>
                    </tr>
                    <tr>
                        <th>Prix Phase</th>
                        <td>{{phase.nbrJEH * phase.prixJEH}} €</td>
                    </tr>
                    <tr>
                        <th>Avancement</th>
                        <td></td>
                    </tr>
                </table>
            </div>
                    {% endfor %}
        </div>