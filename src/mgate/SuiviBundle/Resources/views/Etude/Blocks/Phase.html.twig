<div class="navbar">
    <div class="navbar-inner">
        <span class="brand">Phases</span>
        <ul class="nav">
            <li><a href="{{ path('mgateSuivi_phases_modifier', {'id': etude.id}) }}"><i class="icon-tasks"></i>  Modifier les Phases</a></li>
        </ul>
    </div>
</div>
<div class="row">
                    {% for phase in etude.phases %}
        <div class="span4">
            <table class="table table-striped table-bordered egalize" >
                <tr>
                    <th colspan="2">Phase n°{{phase.position+1}}</th>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{phase.titre | nl2br }}</td>
                </tr>
                <tr>
                    <th>Objectifs</th>
                    <td>{{phase.objectif | nl2br }}</td>
                </tr>
                <tr>
                    <th>Méthodologie</th>
                    <td>{{phase.methodo | nl2br }}</td>
                </tr>
                <tr>
                    <th>Validation</th>
                    <td>
                                    {% if phase.validation == 1 %}
                            Validation orale lors d’un entretien avec le client.
                                    {% elseif phase.validation == 2 %}
                            Validation écrite qui prend la forme d’un PVI.
                                    {% endif %}   
                        </td>
                    </tr>
                    <tr>
                        <th>Nombre JEH</th>
                        <td>{{phase.nbrJEH}} JEH</td>
                    </tr>
                    <tr>
                        <th>Prix JEH</th>
                        <td>{{phase.prixJEH}} €</td>
                    </tr>
                    <tr>
                        <th>Date de Debut</th>
                        <td>{{phase.dateDebut|date("d/m/Y")}}</td>
                    </tr>
                    <tr>
                        <th>Delai</th>
                        <td>{{phase.delai}} jours</td>
                    </tr>
                    <tr>
                        <th>Prix Phase</th>
                        <td>{{phase.nbrJEH * phase.prixJEH}} €</td>
                    </tr>
                    <tr>
                        <th>Avancement</th>
                        <td></td>
                    </tr>
                </table>
            </div>
                    {% endfor %}
        </div>