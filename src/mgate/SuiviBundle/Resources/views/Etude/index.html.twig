{# layout d'accueil pour les études  #}

{% extends "mgateSuiviBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block content_bundle %}

    <h2>Liste des études</h2>

    <ul>

        {% for etude in etudes %}
            <li>
                <a href="{{ path('mgateSuivi_etude_voir', {'id': etude.id}) }}"> etude n°{{ etude.id }}</a>
                {{ etude.prospect.nom }} - {{ etude.nom }}
            </li>
        {% else %}
            <li>Pas (encore !) d'études</li>
        {% endfor %}

    </ul>

{% endblock %}
