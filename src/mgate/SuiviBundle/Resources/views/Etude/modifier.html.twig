{% extends "mgateSuiviBundle::layout.html.twig" %}

{% block title %}
	Modifier une étude - {{ parent() }}
{% endblock %}

{% block content_bundle %}
                
    <h2>Modifier l'étude</h2>
    
<form method="post" {{ form_enctype(form) }}>
    
    {% form_theme form 'mgateSuiviBundle:Form:fields.html.twig' %}
    {{ form_widget(form) }}
    
	
	<input type="submit" value="Enregistrer l'étude"/>
        <input type="submit" value="Enregistrer l'étude et passer à l'AP" name="ap" id="ap"/>
</form>


    <p>Modification d'une étude</p>



    <p>
        <a href="{{ path('mgateSuivi_etude_voir', {'id': etude.id}) }}" >Retour à l'article</a>
    </p>
    
    
        <form id="confirm" data-content="Êtes-vous sûr de vouloir supprimer définitivement cet élément ?" action="{{ path('mgateSuivi_etude_supprimer', { 'id': etude.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                <button>Supprimer l'étude</button>
        </form>

{% endblock %}
   
{% block javascript %}
    {{ parent() }}
    {{ form_javascript(form) }}
    {% include "mgateSuiviBundle:DocType:selectOrNew.html.twig" with { known: form.knownProspect, knowned: form.prospect, newed: form.newProspect }%} 
{% endblock %}