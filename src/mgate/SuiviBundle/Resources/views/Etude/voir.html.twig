{% extends "mgateSuiviBundle::layout.html.twig" %}

{% block title %}
	Affichage d'une étude - {{ parent() }}
{% endblock %}

{% block content_bundle %}

    <h2>Etude n°{{ etude.id }}</h2>
    <li>Par le mandat {{ etude.mandat }}, créée le {{ etude.dateCreation|date("d/m/Y") }}</li>
    <li>Client: {{ etude.prospect.nom }} </li>
    <li>Suiveur: {{etude.suiveur.username| default("Pas de suiveur!")}}</li>
    <li>Description de l'étude: <br />{{etude.description }}</li>
    <br>
    <h3>Avant-Projet</h3>
    {% for ap in etude.aps %}
        <li>Version {{ap.id}}</li>
    {% endfor %}
    <h3>Phases</h3>
    {% for phase in etude.phases %}
        <li>Phase n°{{phase.position}}: {{phase.titre}}</li>
        <li>{{phase.validation}}</li>
    {% endfor %}
    <a href="{{ path('mgateSuivi_phases_modifier', {'id': etude.id}) }}">Modifier les phases</a>
    <div>

    </div>

    <p><br />
        <a href="{{ path('mgateSuivi_etude_homepage') }}">Retour à la liste</a> - 
        <a href="{{ path('mgateSuivi_etude_modifier', {'id': etude.id}) }}">Modifier l'étude</a>
    
