            <td>{{ etude.pvr.dateSignature ? etude.pvr.dateSignature | date("d/m/Y") : "Non signé"}}</td>
            <td>{{ etude.pvr.signataire2 ? etude.pvr.signataire2.nomFormel }}</td>
        </tr>
    {% endif %}
    </table>
</div>


